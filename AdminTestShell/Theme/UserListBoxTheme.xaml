<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="UserListBoxTheme">
        <Grid>
            <StackPanel Orientation="Vertical">
                <StackPanel VerticalAlignment="Bottom" Margin="5 0  0 0">
                    <TextBlock Foreground="White" FontStyle="Italic" Text="{Binding fullName}"></TextBlock>
                </StackPanel>
                <StackPanel Margin="0 -5 0 0" VerticalAlignment="Bottom" Orientation="Horizontal">
                    <Label Foreground="White" FontSize="13" VerticalAlignment="Center">Логин:</Label>
                    <TextBlock Foreground="White" FontSize="12" VerticalAlignment="Center" Text="{Binding username}"
                               FontWeight="DemiBold">
                    </TextBlock>
                </StackPanel>
                <StackPanel Margin="0 -10 0 0" VerticalAlignment="Top" Orientation="Horizontal">
                    <Label Foreground="White" FontSize="13" VerticalAlignment="Center">Пароль:</Label>
                    <TextBlock Foreground="White" FontSize="12" VerticalAlignment="Center" Text="{Binding password}"
                               FontWeight="DemiBold">
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>